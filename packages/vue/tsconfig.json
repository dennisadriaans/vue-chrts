{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "lib": ["ESNext", "DOM"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "paths": {
        "@vue-chrts/shared": ["../shared/dist/index.d.ts"],
        "@vue-chrts/shared/*": ["../shared/dist/*"]
      }
    },
    "include": ["lib/**/*.ts", "lib/**/*.vue", "lib/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
  }